# AI Model Configuration
# Options: gemini, lmstudio, ollama, groq
AI_PROVIDER=gemini

# Gemini API key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Groq API key (get from https://console.groq.com)
# Fast inference with vision support via Llama 4 Scout
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# LM Studio Configuration (OpenAI-compatible API)
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=llama-3.2-3b-instruct

# Ollama Configuration
OLLAMA_URL=http://localhost:11434/v1
OLLAMA_MODEL=llava:13b

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_teacher_db

# Server Port (Railway will provide this automatically)
PORT=3001

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-long-random-string

# Text-to-Speech Configuration
# Primary TTS Provider: google (default) or elevenlabs
TTS_PROVIDER=google
TTS_FALLBACK_ENABLED=true

# Google Cloud TTS Configuration (Primary)
# Get API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=your-project-id

# ElevenLabs TTS Configuration (Fallback)
# Get free key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5
ELEVENLABS_MULTILINGUAL_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_STT_MODEL_ID=scribe_v2

# Language-specific Google TTS voices (optional)
# If not set, will use default voices for each language
GOOGLE_ENGLISH_VOICE=en-IN-Wavenet-A
GOOGLE_HINDI_VOICE=hi-IN-Wavenet-A
GOOGLE_TAMIL_VOICE=ta-IN-Wavenet-A
GOOGLE_TELUGU_VOICE=te-IN-Standard-A
GOOGLE_BENGALI_VOICE=bn-IN-Wavenet-A
GOOGLE_GUJARATI_VOICE=gu-IN-Wavenet-A
GOOGLE_MARATHI_VOICE=mr-IN-Wavenet-A
GOOGLE_KANNADA_VOICE=kn-IN-Wavenet-A
GOOGLE_MALAYALAM_VOICE=ml-IN-Wavenet-A
GOOGLE_PUNJABI_VOICE=pa-IN-Wavenet-A

# Language-specific ElevenLabs voice and model settings (optional)
# If not set, will fall back to ELEVENLABS_VOICE_ID and ELEVENLABS_MODEL_ID
